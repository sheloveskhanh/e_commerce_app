{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@products/*": [
        "app/products/*"
      ],
      "@layout/*": [
        "app/layout/*"
      ],
      "@styles/*": [
        "app/styles/*"
      ]
    },
    "module": "esnext",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
